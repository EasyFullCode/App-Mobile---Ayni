<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_home"
    android:layout_margin="15dp"
    tools:context=".ElectronicoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageButton
        android:id="@+id/IbtnAudifono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audifonos"
        android:contentDescription="Audifono Gamer"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="@color/btnAyni"
            android:textColor="@color/white"
            android:text="S/50 - Audifonos Gamer"
            android:textAlignment="center" />
        <ImageButton
            android:id="@+id/IbtnTablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tablet"
            android:contentDescription="Tablet"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="@color/btnAyni"
            android:textColor="@color/white"
            android:text="S/120 - Tablet para niÃ±os"
            android:textAlignment="center" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smartwatch"
            android:contentDescription="SmartWatch"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="@color/btnAyni"
            android:textColor="@color/white"
            android:text="S/60 - SmartWatch"
            android:textAlignment="center" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/teclado"
            android:contentDescription="Audifonos"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="@color/btnAyni"
            android:textColor="@color/white"
            android:text="S/100 - Teclado Gamer"
            android:textAlignment="center" />
    </LinearLayout>
</ScrollView>